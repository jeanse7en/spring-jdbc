<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="bug_and_workaround" author="me">
        <createTable tableName="class">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="group">
            <column name="class" type="VARCHAR(255)"/>
            <column name="group" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
        <addPrimaryKey tableName="group" columnNames="class,group"/>

        <createTable tableName="person">
            <column name="class" type="VARCHAR(255)"/>
            <column name="group" type="VARCHAR(255)"/>
            <column name="person" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
        <addPrimaryKey tableName="person" columnNames="class,group,person"/>

        <createTable tableName="group_metadata">
            <column name="class" type="VARCHAR(255)"/>
            <column name="group" type="VARCHAR(255)"/>
            <column name="alias" type="VARCHAR(255)"/>
        </createTable>

        <addPrimaryKey tableName="group_metadata" columnNames="class,group"/>

        <createTable tableName="group_metadata_tag">
            <column name="class" type="VARCHAR(255)"/>
            <column name="group" type="VARCHAR(255)"/>
            <column name="tag" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
        <addPrimaryKey tableName="group_metadata_tag" columnNames="class,group,tag"/>

        <createTable tableName="skill">
            <column name="class" type="VARCHAR(255)"/>
            <column name="group" type="VARCHAR(255)"/>
            <column name="person" type="VARCHAR(255)"/>
            <column name="skill" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
        <addPrimaryKey tableName="skill" columnNames="class,group,person,skill"/>

    </changeSet>

</databaseChangeLog>